#!/bin/bash

# verifies if is root
if [ "$EUID" -ne "0" ]; then
    echo "This script must be run as root." >&2
    exit 1
fi

# create dir and copy file
sudo chmod 777 pen
sudo mkdir -p /usr/local/bin/pen/
sudo cp -r pen /usr/local/bin/pen/
sudo chmod 777 /usr/local/bin/pen/

# export to path
PEN_PATH=/usr/local/bin/pen/
PATH=$PATH:$PEN_PATH
export PATH